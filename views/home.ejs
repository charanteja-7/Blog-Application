<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>BlogApp</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <h1 class="container mt-3">All Blogs<span class="fs-2"> - <%= blogs.length %></span></h1>
    <div class="container mt-3">
        <div class="row">
          <% blogs.forEach(blog => { %>
            <div class="col-lg-4 col-md-6 mb-4">
              <div class="card h-100">
                <img src="<%= blog.coverImageURL %>" class="card-img-top  object-fit-cover h-50" alt="coverImage">
                <div class="card-body d-flex flex-column">
                  <h5 class="card-title"><%= blog.title %></h5>
                  <p class="card-text text-truncate"><%= blog.body %></p>
                  <div class="mt-auto">
                    <a href="/blog/<%= blog._id %>" class="btn btn-primary w-30">Read Blog</a>
                  </div>
                  
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
      

    <%- include('./partials/scripts') %>
</body>
</html>