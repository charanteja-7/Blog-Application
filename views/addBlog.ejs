<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>AddNewBlogPage</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container mt-4">
        <form action="/blog" method="post" enctype="multipart/form-data">
            <div class="mb-3 fs-3 fw-bold">
                <label for="coverImage" class="form-label">Cover Image</label>
                <input type="file" class="form-control" name="coverImage" id="coverImage" aria-describedby="coverImage">
            </div>
            <div class="mb-3 fs-3 fw-bold">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" name="title" id="title" aria-describedby="title">
            </div>
            <div class="mb-3">
                <label for="category" class="form-label">Select Category</label>
                <select class="form-select" id="category" name="category" required>
                    <option value="Technology">Technology</option>
                    <option value="Life Style">Life Style</option>
                    <option value="Education">Education</option>
                    <option value="Entertainment">Entertainment</option>
                    <option value="Business">Business</option>
                    <option value="Arts and Culture">Arts and Culture</option>
                    <option value="Society and Politics">Society and Politics</option>
                </select>
            </div>
            <div class="mb-3 fs-3 fw-bold">
                <label for="body" class="form-label">Body</label>
                <textarea class="form-control" placeholder="Enter the Blog Content" id="body" name="body" style="height: 100px"></textarea>
            </div>
            <div class="mb-3 fs-3 fw-bold">
                <button class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
    <%- include('./partials/scripts') %>
</body>
</html>